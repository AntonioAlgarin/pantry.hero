<div class="signIn-backgroundImage">
<h2 class="mb-4 text-color">Log in</h2>


  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="d-flex flex-column align-items-center  mb-3 col-6 mx-auto">
    <%= f.label :email,:class=>"text-color" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:class => "form-control" %>
  </div>
  

  <div class="d-flex flex-column align-items-center mb-3 col-6 mx-auto">
    <%= f.label :password,:class=>"text-color"  %>
    <%= f.password_field :password, autocomplete: "current-password",:class => "form-control" %>
  </div>

  <div class = "d-flex flex-column align-items-center">
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,:class=>"text-color" %>
    </div>
  <% end %>

  <div class=" mb-3 col-12 d-flex flex-column align-items-center">
    <%= f.submit "Log in", :class=>"btn btn-success btn-lg col-4" %>
  </div>
  </div>
<% end %>

<div class="d-flex flex-column align-items-center mx-auto text-color">
<%= render "devise/shared/links" %>
</div>
</div>